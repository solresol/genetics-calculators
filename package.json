{
  "name": "genetics-calculators",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "pedigree-opt": "./cli.js",
    "pedigree-layout": "./layout-cli.js",
    "prob-fraction": "./fraction-cli.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathIgnorePatterns=/node_modules/ --testPathIgnorePatterns=/tests-playwright/ --testPathIgnorePatterns=/tests/selenium_",
    "test:selenium": "node --experimental-vm-modules node_modules/.bin/jest tests/selenium_ --runInBand",
    "test:ci": "npm run test:unit && npm run test:selenium",
    "build": "node build.js",
    "sanity": "node scripts/sanity_check.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "esbuild": "^0.25.5",
    "jest": "^29.6.1",
    "selenium-webdriver": "^4.33.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests-playwright/"
    ]
  },
  "dependencies": {
    "optimization-js": "^1.5.0"
  }
}
